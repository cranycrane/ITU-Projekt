<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:clipChildren="false"
	android:id="@+id/drawer_layout"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	tools:context=".BaseDrawerActivity">

	<FrameLayout
		android:clipChildren="false"
		android:id="@+id/content_frame"
		android:layout_height="match_parent"
		android:layout_width="match_parent"/>

	<RelativeLayout
		android:background="@drawable/bg_menu_normal"
		android:id="@+id/drawer"
		android:layout_gravity="start"
		android:layout_height="match_parent"
		android:layout_width="240dp"
		android:paddingTop="?attr/actionBarSize">

		<View
			android:background="@color/separator"
			android:id="@+id/separator"
			android:layout_alignParentTop="true"
			android:layout_height="1dp"
			android:layout_width="match_parent"/>

		<ListView
			android:choiceMode="singleChoice"
			android:divider="@null"
			android:dividerHeight="0dp"
			android:id="@+id/drawer_list"
			android:layout_above="@+id/drawer_login"
			android:layout_below="@id/separator"
			android:layout_gravity="start"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"/>

		<LinearLayout
			android:clickable="true"
			android:gravity="start|center_vertical"
			android:id="@id/drawer_login"
			android:layout_alignParentBottom="true"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:padding="@dimen/p2">

			<ImageView
				android:id="@+id/drawer_login_image"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/p2"
				android:layout_marginRight="@dimen/p2"
				android:layout_width="wrap_content"
				android:visibility="gone"/>

			<com.thefuntasty.flowlist.view.SourceSansProLightTextViewNoSpacing
				android:id="@+id/drawer_login_name"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:textColor="@color/background_floating_material_dark"
				android:textSize="@dimen/s30"/>
		</LinearLayout>
	</RelativeLayout>

</android.support.v4.widget.DrawerLayout>
