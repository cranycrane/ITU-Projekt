<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.thefuntasty.flowlist"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:name="com.thefuntasty.flowlist.App"
		android:theme="@style/AppTheme">
		<activity
			android:launchMode="singleTop"
			android:name="com.thefuntasty.flowlist.activity.BaseDrawerActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppThemeTransparentBar"
			android:windowSoftInputMode="adjustNothing">
		</activity>

		<activity
			android:name="com.thefuntasty.flowlist.activity.LoginActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppThemeNoBar">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>

		<activity
			android:name="com.thefuntasty.flowlist.activity.EmailLoginActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppThemeNoBar"
			android:windowSoftInputMode="stateVisible"/>

		<activity
			android:label="@string/title_facebook_login"
			android:name="com.facebook.LoginActivity"
			android:screenOrientation="portrait"/>

		<activity
			android:name="com.thefuntasty.flowlist.activity.FillMissingActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppThemeTransparentBar"/>

		<activity
			android:name=".activity.OneRecordActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme"
			android:windowSoftInputMode="adjustNothing|stateVisible"/>

		<activity
			android:name=".activity.NumberPickerActivity"
			android:parentActivityName=".activity.BaseDrawerActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppThemeRedBar">

			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.thefuntasty.flowlist.activity.BaseDrawerActivity"/>
		</activity>

		<receiver android:name=".notification.OnBootBroadcast">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED"/>
			</intent-filter>
		</receiver>

		<service
			android:enabled="true"
			android:name="com.thefuntasty.flowlist.notification.AlarmService"/>

		<service
			android:enabled="true"
			android:name="com.thefuntasty.flowlist.notification.DelayNotificationService"/>

		<meta-data
			android:name="com.facebook.sdk.ApplicationId"
			android:value="@string/facebook_app_id"/>

		<meta-data
			android:name="AA_DB_NAME"
			android:value="flowlist.db"/>

		<meta-data
			android:name="AA_DB_VERSION"
			android:value="1"/>
		<meta-data
			android:name="com.crashlytics.ApiKey"
			android:value="70f007bb39347ef9aedb0f760432e4798de0cd04"/>
	</application>

</manifest>
